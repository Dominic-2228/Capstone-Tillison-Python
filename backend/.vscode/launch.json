{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Current File (Not for Django Views)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Django Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "8000"],
      "django": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
